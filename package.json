{
  "name": "shedlite.build",
  "version": "1.0.0",
  "description": "Dev setup for Paradigm Shift single-page site",
  "scripts": {
    "start": "npm-run-all --parallel watch:scss serve",
    "serve": "live-server --open=index.html --watch=index.html,assets/css/main.css,assets/js/main.js",
    "build:css": "sass assets/sass/main.scss assets/css/main.css && cleancss -o dist/main.min.css assets/css/main.css",
    "watch:scss": "sass --watch assets/sass/main.scss:assets/css/main.css",
    "minify:html": "html-minifier --collapse-whitespace --remove-comments --minify-css true --minify-js true -o dist/index.min.html index.html"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "html-minifier": "^4.0.0",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "sass": "^1.92.1"
  }
}
