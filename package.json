{
  "name": "shedlite.build",
  "version": "1.0.0",
  "description": "Dev setup for Paradigm Shift single-page site",
  "scripts": {
    "start": "live-server --open=index.html",
    "build:css": "cleancss -o dist/main.min.css index.html",
    "minify:html": "html-minifier --collapse-whitespace --remove-comments --minify-css true --minify-js true -o dist/index.min.html index.html"
  },
  "devDependencies": {
  "clean-css-cli": "^5.6.2",
    "html-minifier": "^4.0.0",
    "live-server": "^1.2.2"
  }
}
